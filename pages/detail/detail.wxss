page {
  background: #efefef;
}
.wrap {
  padding: 0 30rpx;
}
.item {
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:30rpx;
  margin-top: 30rpx;
}
.item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.txt {
  margin-left: 30rpx;
  flex:1;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
}
.txt > text:first-child {
  font-size: 30rpx;
  font-weight: bold;
}