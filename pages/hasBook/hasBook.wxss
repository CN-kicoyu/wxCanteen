.bg {
  width: 100%;
  display:block;
}
.mode {
  width:80%;
  margin: 0 auto;
}
.title {
  padding: 0 20%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin:60rpx 0 50rpx;
}
.line {
  flex:1;
  display: block;
  height: 4rpx;
  background: #cccccc;
  position:relative;
}
.line:after {
  content: '';
  width:10rpx;
  height: 10rpx;
  border-radius:100%;
  position:absolute;
  background: #cccccc;
  top:50%;
  transform: translateY(-50%);
}
.line:first-child:after {
  right:0;
}
.line:last-child:after {
  left:0;
}
.day {
  padding:0 50rpx;
  font-size: 30rpx;
}
.main {
  width: 100%;
  background: #f2f2f2;
  display: flex;
  align-items: center;
  padding: 40rpx 0;
  justify-content: center;
}
.content {
  flex: 1;
  text-align: center;
}
.img-wrap {
  background: #fff;
  width: 140rpx;
  height: 140rpx;
  border-radius: 2rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:center;
  margin: 0 auto;
}
.img-wrap image {
  width: 50rpx;
  height: 45rpx;
}
.img-wrap text {
  font-size: 24rpx;
  margin-top: 15rpx;
  color: #272826;
}
.btn {
  width: 100rpx;
  height: 45rpx;
  line-height: 45rpx;
  background: #56c255;
  color:white;
  font-size: 24rpx;
  border-radius: 100px;
  margin: 20rpx auto 0;
}